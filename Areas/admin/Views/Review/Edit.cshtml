@model WebCamping.Models.Review

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <h1>Review</h1>
    <hr />
    <div class="col-md-4 border border-2 rounded-2 ">
        <h2 class="text-center">Edit Form</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="REV_ID" />
            <div class="form-group">
                <label asp-for="USE_ID" class="control-label"></label>
                <select asp-for="USE_ID" class="form-control" asp-items="ViewBag.USE_ID"></select>
                <span asp-validation-for="USE_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PRO_ID" class="control-label"></label>
                <select asp-for="PRO_ID" class="form-control" asp-items="ViewBag.PRO_ID"></select>
                <span asp-validation-for="PRO_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <select asp-for="Rate" class="form-select">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center align-content-center text-center my-2">
                <a asp-action="Index" class="text-decoration-none mx-3">
                    <button type="button" class="back-button">
                        <i class="fa-solid fa-arrow-left text-white back-svgIcon"></i>
                    </button>
                </a>
                <input type="submit" value="Save" class="btn btn-success text-black bg-success-subtle rounded rounded-5" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
