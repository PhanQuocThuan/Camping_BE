@model IEnumerable<WebCamping.Models.Feature>

@{
    ViewData["Title"] = "Index";
}

<div class="row d-flex justify-content-between">
    <div class="col-1">
        <h1>Feature
        </h1>
    </div>
    <div class="col-1 my-auto">
        <a asp-action="Create" class="text-decoration-none">
            <button class="cssbuttons-io-button">
                <span><i class="fa-solid fa-plus"></i></span>
                Add
            </button>
        </a>
    </div>
</div>
<table class="table table-striped table-bordered ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src=~/data/features/@item.Icon style="width:100px;" />
                @* @Html.DisplayFor(modelItem => item.Icon) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.FEA_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FEA_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FEA_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
