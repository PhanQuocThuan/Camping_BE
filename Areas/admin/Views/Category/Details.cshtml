@model WebCamping.Models.Category

@{
    ViewData["Title"] = "Details page";
}

<div class="row my-3">
        <h1>Category Detail</h1>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DisplayOrder)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UpdatedDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UpdatedBy)
            </dd>
        </dl>
        <div class="d-flex align-content-center text-center my-auto">
            <a asp-action="Index" class="text-decoration-none mx-3">
                <button type="button" class="back-button">
                    <i class="fa-solid fa-arrow-left text-white back-svgIcon"></i>
                </button>
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.CAT_ID" class="text-decoration-none">
                <button type="button" class="edit-button">
                    <i class="fa-solid fa-pen text-white edit-svgIcon"></i>
                </button>
            </a>
        </div>
</div>

